{% extends "../../views/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "../../views/macros/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ __p('paymentLinksV2.amount.enterAmountToPay') }} - {{ productName }}
{% endblock %}

{% block contentBody %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {{ govukBackLink({
      text: "Back",
      href: backLinkHref
    }) }}

    {{ errorSummary ({
      errors: errors,
      hrefs: {
        'payment-amount': '#payment-amount'
      }
    }) }}

    <form action="/pay/{{ productExternalId }}/amount" method="post" name="startPaymentForm" class="push-bottom">
      <input id="csrf" name="csrfToken" type="hidden" value="{{ csrf }}"/>

      {% set paymentAmountError = false %}
      {% if errors['payment-amount'] %}
        {% set paymentAmountError = {
          text: errors['payment-amount']
        } %}
      {% endif %}

      {{ govukInput({
        id: "payment-amount",
        name: "payment-amount",
        errorMessage: paymentAmountError,
        label: {
          text: __p('paymentLinksV2.amount.enterAmountToPay'),
          classes: "govuk-label--l",
          isPageHeading: true
        },
        prefix: {
          text: "Â£"
        },
        classes: "govuk-input--width-5",
        spellcheck: false
      }) }}
      
      {{ govukButton({
        text: __p('buttons.continue')
      }) }}
    </form>
  </div>
</div>
{% endblock %}
