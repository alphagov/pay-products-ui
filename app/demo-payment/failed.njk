{% extends "../views/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}After a failed payment - GOV.UK Pay{% endblock %}

{% block contentBody %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">After a failed payment</h1>
    <p class="govuk-body scenario-description">If the payment fails, the user will see a GOV.UK Pay error page. This includes a link to return to your service where you should give them useful next steps.</p>
     <p class="govuk-body"><a class="govuk-link scenario-docs-link" href="{{scenarioDocsLink}}">See what you should do after a failed payment in our documentation</a></p>

    <h2 class="govuk-heading-m error-page-header">This is an example error page</h2>
    <img class="govuk-!-margin-bottom-5" src="{{exampleImgSrc}}"/>

    <p class="govuk-body try-a-different-card-number"><a href="{{cardNumbersDocsLink}}">Try a different card number</a> to see a successful confirmation.</p>

    <p class="govuk-body transactions-prompt">You can now view this payment in your transactions list on GOV.UK Pay.</p>

      {{ govukButton({
        text: "Go to transactions",
        href: transactionsLink,
        classes: "transactions-link"
      }) }}
  </div>
    </div>
{% endblock %}
